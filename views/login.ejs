<%- include layouts/header.ejs %>

<body>
  <div class="row">

    <div class="col-md-3"></div>

    <div class="col-md-6">
        <form action="/login" method="POST">
          <!-- Login Details -->
          <div class="billing-details">
            <div class="section-title">
              <h3 class="title">Iniciar Sesi&oacute;n.</h3>
            </div>
            <% if(global.sessionerror) { %>
            <div class="alert alert-danger alert-dismissible">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <strong>Error!</strong> Correo o contrase&ntilde;a incorrectos.
            </div>
            <% } %>
            <div class="form-group">
              <input class="input" type="email" name="txtCorreo" placeholder="Correo Electrónio" value="<%= global.usuario %>" autofocus required>
            </div>
            <div class="form-group">
              <input class="input" type="password" name="txtContrasena" placeholder="Contraseña" required>
            </div>
            <div class="form-group">
              <input class="primary-btn cta-btn" type="submit" value="Iniciar Sesión">
              &nbsp;&nbsp;&nbsp;&oacute;&nbsp;&nbsp;&nbsp;
              <a href="/registro" class="primary-btn">Registrarse</a>
            </div>
          </div>
          <!-- /Login Details -->
        </form>
    </div>

    <div class="col-md-3"></div>
  </div>
  
<%- include layouts/footer.ejs %>