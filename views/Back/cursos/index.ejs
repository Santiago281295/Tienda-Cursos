<%- include ../layouts/headerBack.ejs %>

<div class="card">
    <div class="card-header">
      <h4>Listado de Cursos</h4>
      <br>
      <!-- <input type="submit" value="Submit" class="mr-3 btn btn-primary"> -->
      <a href="/Back/curso_nuevo" class="mr-3 btn btn-primary">
      	<i class="fa fa-plus-circle fa-lg"></i> Agregar nuevo curso
      </a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover table-sm table-bordered">
          <thead>
            <tr>
              <th>Clave</th>
              <th>T&iacute;tulo</th>
              <th>Descripci&oacute;n</th>
              <th>Precio</th>
              <th>Stock</th>
              <th style="width: 10%;">Imagen</th>
              <th>Tecnolog&iacute;a</th>
              <th>Autor</th>
              <th>Ventas Totales</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<queryCursos.length; i++) { %>

            <tr>
            	<th><%= queryCursos[i].IDProducto %></th>
            	<th><%= queryCursos[i].Titulo %></th>
            	<th><%= queryCursos[i].Descripcion %></th>
            	<th><%= queryCursos[i].Precio%></th>
            	<th><%= queryCursos[i].Stock %></th>
            	<th><img src="../../img/libros/<%= queryCursos[i].Imagen %>" alt="<%= queryCursos[i].Imagen %>" style="max-width: 100%;"></th>
            	<th><%= queryCursos[i].Tecnologia %></th>
            	<th><%= queryCursos[i].Autor %></th>
            	<th><%= queryCursos[i].TotVendidos %></th>
              <th>
                <a href="/Back/curso_editar/<%= queryCursos[i].IDProducto %>" class="btn btn-primary">
                  <i class="fa fa-pencil fa-lg"></i> Editar
                </a>
                <a href="/Back/curso_eliminar/<%= queryCursos[i].IDProducto %>" class="btn btn-danger">
                  <i class="fa fa-trash-o fa-lg"></i> Eliminar
                </a>
              </th>
            </tr>

            <% } %>
          </tbody>
        </table>
      </div>
    </div>

</div>

<%- include ../layouts/footerBack.ejs %>